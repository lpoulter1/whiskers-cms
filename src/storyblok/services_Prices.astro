---
import { storyblokEditable } from "@storyblok/astro";
const { blok } = Astro.props;
---

<div {...storyblokEditable(blok)} class="">
  <section id="services" class="flex flex-col gap-10 pt-24">
    <h1
      class="text-5xl text-neutral-900 col-span-4 text-center tracking-widest"
    >
      Services & <span class="text-orange-500">Prices</span>
    </h1>

    <div
      class="bg-neutral-50 p-2 md:gap-0 gap-7 grid md:grid-cols-2 justify-around justify-items-center lg:m-10 md:flex-row"
    >
      <div class="text-justify text-lg md:text-xl self-center w-9/12">
        <p class="leading-10">
          Your dog will enjoy their walk in <span class="text-green-600"
            >woodlands</span
          > and <span class="text-green-600"> fields</span>, benefiting both
          physically and mentally from socialising and playing with other
          friendly dogs on their group walks. They will always come home happy
          and relaxed.
        </p>
      </div>

      <div class="flex flex-col m-2 gap-5 text-left lg:p-5 lg:grid md:w-9/12">
        <p class="text-3xl text-center">Group Walks</p>
        {
          blok.prices_table.tbody.map((row, index) => (
            <div
              id={index}
              class="border-2 border-neutral-200 rounded-md flex items-center justify-between px-6 p-2  lg:gap-14 bg-white gap-10 md:gap-0 "
            >
              <div class="flex flex-col  ">
                <div class="text-2xl text-neutral-900 font-medium  ">
                  {row.body[0].value}
                </div>
                <div class="text-1xl italic text-neutral-500">
                  {row.body[1].value}
                </div>
              </div>
              <div class="text-2xl text-left text-orange-500 font-medium">
                {row.body[2].value}
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>
</div>
