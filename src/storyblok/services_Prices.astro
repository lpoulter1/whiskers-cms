



---
import { Image } from "astro:assets";
import logoSrc from "public/images/WhatsApp.jpeg";
import StoryblokComponent from "@storyblok/astro/StoryblokComponent.astro";
import { storyblokEditable } from "@storyblok/astro";
const { blok } = Astro.props;
// console.log(blok);
// console.log(JSON.stringify(blok.prices_table.tbody, null, 2));
---

<div {...storyblokEditable(blok)} class="">
  
  <!-- SERVICES & PRICES  --><!-- map over prices taken from Storyblok -->
  <!--  <StoryblokComponent blok={story.content}>  </StoryblokComponent> -->
  <section class="flex flex-col gap-10 mt-20 md:mt-0">
    <h1 class="text-5xl text-neutral-900 col-span-4 text-center tracking-widest">
      Services & <span class="text-orange-500">Prices</span>
    </h1>
    <h2 class="text-xl text-neutral-900 col-span-4 text-center tracking-wide">
      Discover our furry-friendly pricing options, because every wag and whisker
      deserves affordable care tailored just for them!
    </h2>

    <div class="flex flex-col justify-around lg:m-10 lg:flex-row">
      <Image
        class="flex object-contain self-center"
        src={logoSrc}
        alt="dog"
        width={400}
        height={400}
      />

      <!-- prices table from storyblok -->
      <div
        class="flex flex-col m-2 gap-5 text-left lg:p-5 lg:grid lg:col-span-3 lg:justify-center"
      >
        {
          blok.prices_table.tbody.map((row, index) => (
            <div
              id={index}
              class="border-2 border-neutral-200 rounded-md flex items-center justify-between lg:gap-14 p-2 bg-neutral-50"
            >
              <div class="flex flex-col">
                <div class="text-2xl text-neutral-900 font-medium">{row.body[0].value}</div>
                <div class="text-1xl italic text-neutral-500">{row.body[1].value}</div>
              </div>
              <div class="text-2xl text-orange-500 font-medium">
                {row.body[2].value}
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>
</div>

