---
import { Image } from "astro:assets";
import image1 from "../assets/images/image-gallery/1.jpeg";
import image2 from "../assets/images/image-gallery/2.jpeg";
import image3 from "../assets/images/image-gallery/3.jpeg";
import image4 from "../assets/images/image-gallery/4.jpeg";
import image5 from "../assets/images/image-gallery/5.jpeg";
import image6 from "../assets/images/image-gallery/6.jpeg";
import image7 from "../assets/images/image-gallery/7.jpeg";
import image8 from "../assets/images/image-gallery/8.jpeg";
import image9 from "../assets/images/image-gallery/9.jpeg";
---

<section id="dog-gallery">
  <!-- TODO: map over images taken from Storyblok -->
  <Image src={image1} alt="" class="object-cover w-full h-full" />
  <Image src={image2} alt="" class="object-cover w-full h-full" />
  <Image src={image3} alt="" class="object-cover w-full h-full" />
  <Image src={image4} alt="" class="object-cover w-full h-full" />
  <Image src={image5} alt="" class="object-cover w-full h-full" />
  <Image src={image6} alt="" class="object-cover w-full h-full" />
  <Image src={image7} alt="" class="object-cover w-full h-full" />
  <Image src={image8} alt="" class="object-cover w-full h-full" />
  <Image src={image9} alt="" class="object-cover w-full h-full" />
</section>

<style>
  #dog-gallery {
    display: grid;
    /* this is a big ugly todo in tailwind so using css directly */
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1rem;
  }
</style>
